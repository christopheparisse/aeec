{
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test",
        "dist"
    ],
    "compilerOptions": {
        "noImplicitAny": false,
        "allowJs": true,
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "outDir": "./dist"
    }
}
